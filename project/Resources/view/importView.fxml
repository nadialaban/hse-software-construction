          <HBox.margin>
            <Insets left="20.0" />
          </HBox.margin>
        </Button>
      </children>
    </HBox>
    <Button mnemonicParsing="false" onAction="#importContacts" text="Импорт" />
    <Label fx:id="errorLabel" text="Ошибка при чтении файла" textFill="RED" />
    <VBox fx:id="conflictBox" prefHeight="257.0" prefWidth="600.0">
      <children>
        <Label fx:id="wrongFormatLabel" layoutX="30.0" layoutY="10.0" text="Не удалось считать строк: " textFill="RED">
          <padding>
            <Insets left="20.0" />
          </padding>
        </Label>
        <Label text="Возникли следующие конфликты:" textFill="RED">
          <VBox.margin>
            <Insets left="20.0" />
          </VBox.margin>
        </Label>
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
