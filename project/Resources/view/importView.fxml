          </columns>
        </TableView>
        <ToolBar prefHeight="76.0" prefWidth="600.0">
          <items>
            <Button mnemonicParsing="false" onAction="#solveConflict" text="Решить" />
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#ignoreConflict" text="Игнорировать" />
            <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#ignoreAllConflicts" text="Игнорировать все" />
          </items>
        </ToolBar>
      </children>
    </VBox>
  </children>
</VBox>
