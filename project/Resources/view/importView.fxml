<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
  minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/15.0.1"
  fx:controller="nlaban.hw5.phonebook.controller.ImportViewController">
  <children>
    <Button mnemonicParsing="false" onAction="#importContacts" text="Импорт"/>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
        <Button mnemonicParsing="false" onAction="#open" text="Обзор...">
          <HBox.margin>
            <Insets left="20.0"/>
          </HBox.margin>
        </Button>
        <Label text="Файл">
          <HBox.margin>
            <Insets right="20.0"/>
          </HBox.margin>
        </Label>
        <TextField disable="true" editable="false" prefWidth="300.0" promptText="Выберите файл"
          fx:id="path"/>
      </children>
    </HBox>
    <Label text="Ошибка при чтении файла" textFill="RED" fx:id="errorLabel"/>
    <VBox prefHeight="257.0" prefWidth="600.0" fx:id="conflictBox">
      <children>
        <Label layoutX="30.0" layoutY="10.0" text="Не удалось считать строк: "
          textFill="RED" fx:id="wrongFormatLabel">
          <padding>
            <Insets left="20.0"/>
          </padding>
        </Label>
        <Label text="Возникли следующие конфликты:" textFill="RED">
          <VBox.margin>
            <Insets left="20.0"/>
          </VBox.margin>
        </Label>
        <TableView prefHeight="200.0" prefWidth="200.0" fx:id="table">
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
          </columnResizePolicy>
          <columns>
            <TableColumn editable="false" prefWidth="75.0" text="Контакт" fx:id="lineColumn"/>
            <TableColumn editable="false" prefWidth="113.342529296875" text="Поле"
              fx:id="fieldColumn"/>
            <TableColumn editable="false" prefWidth="285.6574401855469" text="Ошибка"
              fx:id="errorColumn"/>
          </columns>
        </TableView>
        <ToolBar prefHeight="76.0" prefWidth="600.0">
          <items>
            <Button mnemonicParsing="false" onAction="#solveConflict" text="Решить"/>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#ignoreConflict"
              text="Игнорировать"/>
            <Button contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false"
              onAction="#ignoreAllConflicts" text="Игнорировать все"/>
          </items>
        </ToolBar>
      </children>
    </VBox>
  </children>
</VBox>
