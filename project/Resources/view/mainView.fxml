<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minWidth="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nlaban.hw5.phonebook.controller.MainViewController">
  <children>
    <VBox minWidth="800.0" prefHeight="500.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="Файл">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#createContact" text="Добавить новый контакт" />
                <MenuItem mnemonicParsing="false" onAction="#editSelectedContact" text="Редактировать контакт" />
                <MenuItem mnemonicParsing="false" onAction="#deleteSelectedContact" text="Удалить контакт" />
                <MenuItem mnemonicParsing="false" onAction="#exit" text="Выход" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Настройки">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#importContacts" text="Импорт" />
                <MenuItem mnemonicParsing="false" onAction="#exportContact" text="Экспорт" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Справка">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#about" text="Справка" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <AnchorPane VBox.vgrow="ALWAYS">
          <children>
            <TableView fx:id="table" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
              </columnResizePolicy>
              <columns>
                <TableColumn fx:id="lNameColumn" editable="false" prefWidth="150.0" text="Фамилия" />
                <TableColumn fx:id="fNameColumn" editable="false" prefWidth="75.0" text="Имя" />
                <TableColumn fx:id="mNameColumn" editable="false" prefWidth="75.0" text="Отчество" />
                <TableColumn fx:id="phonesColumn" editable="false" prefWidth="145.0" text="Мобильный/домашний телефон" />
                <TableColumn fx:id="addressColumn" editable="false" minWidth="8.0" prefWidth="140.0" text="Адрес" />
                <TableColumn fx:id="dateColumn" editable="false" prefWidth="75.0" text="Дата рождения" />
                <TableColumn fx:id="noteColumn" editable="false" minWidth="8.0" prefWidth="140.0" text="Комментарий" />
              </columns>
            </TableView>
          </children>
        </AnchorPane>
        <ToolBar prefHeight="40.0" prefWidth="800.0">
          <VBox.margin>
            <Insets />
          </VBox.margin>
          <items>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteSelectedContact" text="Удалить" />
            <Button layoutX="10.0" layoutY="11.0" mnemonicParsing="false" onAction="#editSelectedContact" text="Редактировать" />
            <Button layoutX="10.0" layoutY="11.0" mnemonicParsing="false" onAction="#createContact" text="Добавить" />
            <TextField fx:id="searchField" onKeyPressed="#onKeyPressed" prefHeight="27.0" prefWidth="400.0" promptText="Введите строку для поиска" />
            <Button layoutX="191.0" layoutY="11.0" mnemonicParsing="false" onAction="#searchContacts" prefHeight="27.0" prefWidth="72.0" text="Поиск" />
          </items>
        </ToolBar>
      </children>
    </VBox>
  </children>
</AnchorPane>
